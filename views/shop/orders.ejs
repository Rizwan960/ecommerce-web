<%- include('../includes/head.ejs') %>
<!-- Bootstrap CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/order.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main class="container mt-5">
        <div class="orders-container">
            <% if (orders && orders.length > 0) { %>
                <h1 class="text-center mb-5">Your Orders</h1>
                <div class="orders-wrapper">
                    <% let grandTotal = 0; %>
                    <% orders.forEach(order => { %>
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title">Order Details</h5>
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th>Product</th>
                                                <th>Image</th>
                                                <th>Quantity</th>
                                                <th>Price</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% let orderTotal = 0; %>
                                            <% order.products.forEach(product => { %>
                                                <% const productTotal = product.orderItem.quantity * product.price; %>
                                                <% orderTotal += productTotal; %>
                                                <tr>
                                                    <td><%= product.title %></td>
                                                    <td>
                                                        <img src="<%= product.imageUrl %>" alt="<%= product.name %>" class="img-fluid" style="width: 75px; height: auto;">
                                                    </td>
                                                    <td><%= product.orderItem.quantity %></td>
                                                    <td>$<%= product.price.toFixed(2) %></td>
                                                    <td>$<%= productTotal.toFixed(2) %></td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td colspan="4" class="text-right"><strong>Order Total:</strong></td>
                                                <td><strong>$<%= orderTotal.toFixed(2) %></strong></td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <% grandTotal += orderTotal; %>
                    <% }) %>
                    <div class="card bg-light p-3 mt-4">
                        <h2 class="text-center">Grand Total: $<%= grandTotal.toFixed(2) %></h2>
                    </div>
                </div>
            <% } else { %>
                <div class="empty-state text-center mt-5">
                    <h1 class="display-4">No Orders Yet!</h1>
                    <p class="lead">It looks like you haven't placed any orders yet. Browse our shop and make your first purchase!</p>
                    <a href="/" class="btn btn-primary btn-lg mt-4">Browse Shop</a>
                </div>
            <% } %>
        </div>
    </main>
    <%- include('../includes/end.ejs') %>
    
    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
